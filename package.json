{
  "name": "release-manager",
  "version": "1.0.0",
  "description": "A service to manage and automate software releases.",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --config eslint.config.mts 'src/**/*.ts'",
    "lint:fix": "eslint --config eslint.config.mts 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "envalid": "8.1.0",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "jiti": "2.5.1",
    "uuid": "13.0.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@eslint/json": "0.13.2",
    "@types/cors": "2.8.17",
    "@types/eslint": "9.6.1",
    "@types/express": "5.0.3",
    "@types/jest": "29.5.8",
    "@types/node": "24.5.1",
    "@types/supertest": "6.0.3",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.4.0",
    "jest": "29.7.0",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "ts-node-dev": "2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.43.0",
    "vitest": "3.2.4"
  }
}
